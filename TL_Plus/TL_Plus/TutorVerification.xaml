<Window x:Class="TL_Plus.TutorVerification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutor Authentication" Height="249" Width="293">
    <Grid>
        <Label Content="Tutor's Page Login" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="267" FontSize="16"/>
        <Button Background="Snow" PreviewMouseDown="Action_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="29" Margin="10,175,0,0" VerticalAlignment="Top" Width="126"/>
        <Button Background="SteelBlue" PreviewMouseDown="Action_Continue"  Content="Continue" HorizontalAlignment="Left" Height="29" Margin="141,175,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Please Enter the Access Password:" HorizontalAlignment="Left" Height="26" Margin="10,51,0,0" VerticalAlignment="Top" Width="280" RenderTransformOrigin="0.554,-0.636" Foreground="DarkGray"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="25" Margin="10,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" TextChanged="InstaAccess"/>



    </Grid>

</Window>
