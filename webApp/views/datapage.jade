									  .y0(function (d) {
									  	return y(1);
									  })
									  //top for area
									  .y1(function (d) {
									    return y(d.count);
									  })
									var xAxis = d3.svg.axis()
										.scale(x)
										.orient('bottom')
										.ticks(5)
										.innerTickSize(6)
										.outerTickSize(12)
										.tickPadding(12);
									var yAxis = d3.svg.axis()
