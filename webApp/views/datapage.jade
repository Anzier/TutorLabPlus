									var counts = _.map(data, 'count');
									var x = d3.time.scale()
									  //examine the date array, return the minimum and maximum for scaling
									  .domain(d3.extent(dates))
									  .range([0, w]);

									var y = d3.scale.linear()
									  .domain(d3.extent(counts))
